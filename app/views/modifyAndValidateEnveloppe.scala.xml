@(shopId: String,
  comment: String,
  requestId: String,
  transDate: javax.xml.datatype.XMLGregorianCalendar,
  ctxMode: String,
  authToken: String,
  uuid: String
)
enveloppeAndHeader(shopId, comment, requestId, transDate, ctxMode, authToken){
    <tns:validatePayment>
        @if(comment.nonEmpty){
        <tns:commonRequest>
            <tns:comment>@comment</tns:comment>
        </tns:commonRequest>
        }
        <tns:queryRequest>
            <tns:uuid>@uuid</tns:uuid>
        </tns:queryRequest>
    </tns:validatePayment>
}
